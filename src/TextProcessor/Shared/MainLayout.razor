@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
                    <h1>@context.GetType()</h1>
                    <p>@context.Message</p>
                    <p>
                        <div>StackTrace: </div>
                        <div>@context.StackTrace</div>
                    </p>
                </ErrorContent>
            </ErrorBoundary>
        </article>
    </main>
</div>

<RadzenDialog />
<RadzenNotification />
